<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ComentarioActivity"
    android:background="@color/Azul">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="450dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="35dp">

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">


            <TextView
                android:id="@+id/textTitleComent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif-medium"
                android:text="Sugerencias"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editTitleSug"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginTop="5dp"
                android:layout_below="@id/textTitleComent"
                android:inputType="textPersonName"
                android:layout_centerHorizontal="true"
                android:padding="5dp"
                android:background="@drawable/footer_custom"
                android:hint="Titulo de sugerencia" />

            <EditText
                android:id="@+id/editTextComentario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editTitleSug"
                android:layout_margin="10dp"
                android:layout_centerHorizontal="true"
                android:hint="Escribe aquÃ­ tus sugerencias"
                android:background="@drawable/footer_custom"
                android:padding="5dp"
                android:inputType="textMultiLine"
                android:minLines="12"
                android:gravity="start|top" />

            <Button
                android:id="@+id/btnSugerencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_custom"
                android:backgroundTint="@color/Azul"
                android:text="Enviar"
                android:textColor="@color/white" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>