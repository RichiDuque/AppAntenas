                <TextView
                    android:id="@+id/textTitleDipolo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/cardDipoloImg"
                    android:fontFamily="sans-serif-medium"
                    android:text="Antenas Dipolo"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/textDetailDipolo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textTitleDipolo"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/cardDipoloImg"
                    android:fontFamily="sans-serif"
                    android:text="Nota: Sin realizar"
                    android:textColor="@color/white"
                    android:textSize="18dp" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardParabolica"
