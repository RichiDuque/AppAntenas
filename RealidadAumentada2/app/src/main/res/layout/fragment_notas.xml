        <androidx.cardview.widget.CardView
            android:id="@+id/cardMIMO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardMicrostrip"
            android:layout_marginTop="20dp"
